<!--index.wxml-->
<view class="container">
<scroll-view scroll-y="true">

<view class="searchInputView">
    <image src="../../img/search.png"></image>
  <input placeholder="请输入所需物品名称" confirm-type="search" class="searchInput" placeholder-class="searchPlaceholder" bindconfirm="searchconfirm"/>
</view>

<view class="indexSharePanel">
  <view class="shareTh"  bindtap="toDetail" wx:for="{{listData}}" data-itemid= "{{item.id}}">
    <view class="" style="display:none">{{item}}</view>
    <image src="{{item.img}}"></image>
    <view>{{item.name}}</view>
    <text>押金：<text class="importentText">{{item.rent}}</text>积分</text>
    <text class="rentText">租金：<text class="importentText">{{item.preRent}}</text>/天</text>
    <view class="">距离您xx公里</view>
  </view>
</view>
<view class="indexEnd">已经到底咯 0.0</view>
</scroll-view>
</view>
